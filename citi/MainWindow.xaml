<Window x:Class="citi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:citi"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="525">
    <Grid>
        <Label Content="用户名" HorizontalAlignment="Left" Margin="121,167,0,0" VerticalAlignment="Top" FontSize="22"/>
        <Label Content="密码" HorizontalAlignment="Left" Margin="121,210,0,0" VerticalAlignment="Top" FontSize="22"/>
        <TextBox x:Name="username_text" HorizontalAlignment="Left" Height="38" Margin="230,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="157" FontSize="22"/>
        <PasswordBox x:Name="password_text" HorizontalAlignment="Left" Height="38" Margin="230,210,0,0"  VerticalAlignment="Top" Width="157" FontSize="22"/>
        <Button Content="登录" HorizontalAlignment="Left" Margin="122,271,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" FontSize="16"/>
        <Button Content="重置" HorizontalAlignment="Left" Margin="312,271,0,0" VerticalAlignment="Top" Width="75" FontSize="16" Click="Button_Click_1"/>
        <Image x:Name="imageView" HorizontalAlignment="Left" Height="100" Margin="205,42,0,0" VerticalAlignment="Top" Width="100" Source="avatar.png"/>

    </Grid>
</Window>
